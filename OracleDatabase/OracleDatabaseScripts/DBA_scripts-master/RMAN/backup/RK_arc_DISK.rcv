CONFIGURE BACKUP OPTIMIZATION ON;
CONFIGURE CONTROLFILE AUTOBACKUP ON;
CONFIGURE CONTROLFILE AUTOBACKUP FORMAT FOR DEVICE TYPE DISK TO '/u02/backup/&1/files/%F';

RUN {
  ALLOCATE CHANNEL C1 DEVICE TYPE DISK FORMAT '/u02/backup/&1/files/ARCH_%d_%T_%U' MAXPIECESIZE 10G;
  BACKUP archivelog all;
  DELETE NOPROMPT OBSOLETE RECOVERY WINDOW OF 5 DAYS DEVICE TYPE DISK;
  RELEASE CHANNEL C1;

}
